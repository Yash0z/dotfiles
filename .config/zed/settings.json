{
  "theme": "Carbonfox",
  // "experimental.theme_overrides": {
  //   "players": [
  //     {
  //       "selection": "#37447599"
  //     }
  //   ]
  // },
  "indent_guides": {
    "enabled": true
  },
  "when_closing_with_no_tabs": "keep_window_open",
  "task": {
    "show_status_indicator": true
  },
  "preview_tabs": {
    "enabled": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "gutter": {
    "line_numbers": true,
    "code_actions": true,
  },
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "buffer_font_family": "SpaceMonoNFM",
  "buffer_font_features": {
    "calt": true,
    "liga": true
  },
  "project_panel": {
    "dock": "right"
  },
  "format_on_save": "on",
  "formatter": "language_server",
  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },
  "terminal": {
    "copy_on_select": true,
    "dock": "right",
    "default_width": 200,
    "line_height": "standard"
  },
  "language_overrides": {
    "TypeScript": {
      "formatter": "prettier"
    },
    "Svelte": {
      "formatter": "prettier"
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    },
    "eslint": {
      "enabled": true,
      "autoFixOnSave": true,
      "autoFixOnFormat": true,
      "autoFixOnFormatDelay": 200,
      "initialization_options": {
        "checkOnSave": {
          "command": "eslint"
        }
      },
      "probe": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html",
        "vue",
        "markdown",
        "svelte"
      ],
      "validate": [
        "javascript",
        "typescript",
        "javascriptreact",
        "svelte"
      ]
    }
  }
}
